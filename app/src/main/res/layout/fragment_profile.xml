<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".ProfileFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:padding="20dp"
        android:background="#fece2f">

        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerVertical="true"
            android:onClick="profile_image"
            android:src="@drawable/ic_baseline_account_circle_24">

        </ImageView>

        <TextView
            android:id="@+id/full_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DENEME DENEME"
            android:textSize="20sp"
            android:layout_toRightOf="@+id/profile_image"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp">

        </TextView>

        <TextView
            android:id="@+id/user_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DENEME DENEME @gmail.com"
            android:textSize="14sp"
            android:layout_toRightOf="@+id/profile_image"
            android:layout_below="@+id/full_name"
            android:layout_marginLeft="10dp">

        </TextView>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_marginTop="-25dp">
        

    <com.google.android.material.card.MaterialCardView
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:layout_margin="10dp"
        app:cardBackgroundColor="#fece2f"
        app:cardElevation="10dp">
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp">
            
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_baseline_payment_24"
                android:layout_centerHorizontal="true">
            </ImageView>

            <TextView
                android:id="@+id/payment_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$123"
                android:textSize="20sp"
                android:layout_centerInParent="true">
            </TextView>

            <TextView
                android:id="@+id/payment_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bakiye"
                android:textSize="14sp"
                android:layout_below="@+id/payment_label"
                android:layout_centerInParent="true">
            </TextView>




        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

    <Button
        android:id="@+id/buttonSifre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PROFİLİNİ DÜZENLE" />

    <Button
        android:id="@+id/buttonBakiye"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BAKİYE YÜKLE" />

    <Button
        android:id="@+id/buttonLogOut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="logout"
        android:text="ÇIKIŞ YAP" />


</LinearLayout>